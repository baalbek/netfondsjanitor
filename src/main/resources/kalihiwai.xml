<?xml version="1.0"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="kalihiwai-helper"
          class="kalihiwai.financial.impl.SimpleBinarySearch">
        <constructor-arg value="50" />
    </bean>

    <bean id="kalihiwai-calc"
          class="kalihiwai.financial.impl.BlackScholesCalculator">
        <constructor-arg ref="kalihiwai-helper" />
        <constructor-arg value="0.01" />
    </bean>
</beans>